<div class="row">
  <div class="col-md-12">
    <h2><%= @user.name %></h2>
    <%= link_to('Linkedin', @user.linkedin, target: '_blank') if @user.linkedin %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h4>Skills</h4>
    <% tag_cloud(@user.skills, %w(css1 css2 css3 css4)) do |tag, css_class| %>
        <%= link_to tag.name, '#!', class: css_class %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h4>Interests</h4>
    <% tag_cloud(@user.interests, %w(css1 css2 css3 css4)) do |tag, css_class| %>
        <%= link_to tag.name, '#!', class: css_class %>
    <% end %>
  </div>

</div>


<%= link_to 'Edit', user_edit_path, class: 'btn btn-default' if current_user && current_user.id == @user.id %>
